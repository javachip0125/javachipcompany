<!--    한영님 관리자 조회, 삭제 -->
    <entry key="login">
        SELECT USER_ID
        USER_PW
        FROM JAVACHIP_MEMBER
    </entry>

    <entry key="DELETE_ATTENDANCE_INFO ">
        DELETE
        FROM ATTENDANCE_INFO
        WHERE JAVACHIP_CODE = ?
    </entry>

    <entry key="DELETE_JAVACHIP_MEMBER">
        DELETE
        FROM JAVACHIP_MEMBER
        WHERE JAVACHIP_CODE = ?
    </entry>

    <entry key="DELETE_WORK_SCHEDULE">
        DELETE
        FROM WORK_SCHEDULE
        WHERE JAVACHIP_CODE = ?
    </entry>

    <entry key="EMPLOYEE_INQUIRY">
        SELECT
        JAVACHIP_CODE,
        WORK_HOUR,
        REMAIN_VACATION,
        WORK_STATUS,
        ARRIVE_INFO,
        LEAVE_INFO,
        WORK_SCHEDULE
        FROM ATTENDANCE_INFO
        WHERE JAVACHIP_CODE = ?
    </entry>
